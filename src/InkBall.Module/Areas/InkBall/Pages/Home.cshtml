@page
@model HomeModel
@{
	ViewData["Title"] = "Home";

	DefineSection(InkBall.Module.CommonUIConfigureOptions.HeadElementsSectionName, async () =>
	{
		WriteLiteral($"<link rel='stylesheet' href='{Url.Content("~/css/demo.css")}' />");
	});
}
<p class="blue-paragraph">
	<strong>Server variables</strong><br /><br />

	Request Method: @HttpContext.Request.Method <br />
	Request Scheme: @HttpContext.Request.Scheme <br />
	Request Path: @HttpContext.Request.Path <br /><br />

	<strong>Request Headers</strong><br />
	@{
		foreach (var header in HttpContext.Request.Headers)
		{
			WriteLiteral($"{header.Key}: {header.Value}<br />");
		}
	}
	<br />

	Request RemoteIp: @HttpContext.Connection.RemoteIpAddress <br />
</p>
@{
	DefineSection(InkBall.Module.CommonUIConfigureOptions.ScriptsSectionName, async () =>
	{
		WriteLiteral($"<script type='text/javascript' src='{Url.Content("~/js/script.js")}'></script>");
	});
}